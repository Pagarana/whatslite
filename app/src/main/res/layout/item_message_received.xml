<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="start">

    <!-- Received Message Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/message_received"
        android:maxWidth="280dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sender Name -->
            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- Original Message -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, this is a received message"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="4dp"/>

            <!-- Translated Message -->
            <TextView
                android:id="@+id/tvTranslatedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merhaba, bu alınan bir mesajdır"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="italic"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"/>

            <!-- Bottom Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_marginTop="4dp">

                <!-- Translate Button -->
                <TextView
                    android:id="@+id/tvTranslateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Translate"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Time -->
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
